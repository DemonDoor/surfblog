@model RealSurfLab.Models.DBModels.User
@{
    ViewBag.Title = "Index";
}

    <div class="panel-info">
        <div class="panel-heading">
            Регистрация нового пользователя
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("Register","Register",FormMethod.Post,new { enctype = "multipart/form-data" }))
            {
            <form>

                <div class="form-group">

                    @Html.LabelFor(model => model.Nickname) <br>
                    @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", title = "от 3 до 20 символов...(дописать" } })
                    @Html.ValidationMessageFor(model => model.Nickname)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)<br>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", title = "Пример ыывпыв@mail.ru" } })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)<br>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password", title = "от 3 до 20 символов" } })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PasswordConfirm)<br>
                    @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", title = "от 3 до 20 символов", type = "Password" } })
                    @Html.ValidationMessageFor(model => model.PasswordConfirm)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName)<br>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", title = "" } })
                    @Html.ValidationMessageFor(model => model.LastName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name)<br>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", title = "" } })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Photo)<br>
                    <input name="imageData" type="file" accept="image/jpg" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ContactInfo)<br>
                    @Html.TextAreaFor(model => model.ContactInfo, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.About)<br>
                    @Html.TextAreaFor(model => model.About, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Achivements)<br>
                    @Html.TextAreaFor(model => model.Achivements, 10, 100, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    <button type="submit" class="btn">Зарегистрироваться</button>
                </div>

            </form>
            }
        </div>

    </div>
